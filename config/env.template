# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Custom JWT Secret (for our custom JWT implementation)
# This is separate from Supabase's internal JWT handling
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_custom_jwt_secret_here

# Application Configuration
NODE_ENV=development
PORT=3001
HOSTNAME=localhost
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=SupplementIQ
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=your_database_url_here

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Redis (Optional - Upstash REST)
# If provided, product caches will use Redis instead of native addon
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Redis (TCP client)
REDIS_HOST=
REDIS_PORT=
REDIS_USERNAME=default
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Security
BCRYPT_ROUNDS=12

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here

# Development
DEBUG=supplementiq:*
