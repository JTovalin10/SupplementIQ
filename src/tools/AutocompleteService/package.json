{
  "name": "cpp-autocomplete-service",
  "version": "1.0.0",
  "description": "High-performance multithreaded C++ autocomplete service for Node.js",
  "main": "index.js",
  "scripts": {
    "build": "make release",
    "build-dev": "make dev",
    "build-gyp": "make install-gyp",
    "clean": "make clean",
    "test": "make test",
    "benchmark": "make benchmark",
    "install-deps": "make deps",
    "rebuild": "make clean && make release"
  },
  "keywords": [
    "autocomplete",
    "trie",
    "multithreading",
    "performance",
    "c++",
    "nodejs",
    "supplements"
  ],
  "author": "SupplementIQ",
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^8.0.0"
  },
  "devDependencies": {
    "node-gyp": "^10.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "gypfile": true,
  "binary": {
    "module_name": "autocomplete_service",
    "module_path": "./build/Release/",
    "remote_path": "./cpp-autocomplete-service/v{version}/",
    "package_name": "{module_name}-v{version}-{node_abi}-{platform}-{arch}.tar.gz",
    "host": "https://github.com/supplementiq/cpp-autocomplete-service/releases/download/"
